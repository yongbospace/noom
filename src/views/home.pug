doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body
    header
      h1 Noom
    main
      div#welcome
        form
          input#roomInput(placeholder="Room Name", required, type="text")
          input#nickInput(placeholder="Nickname" required, type="text")
          button Enter Room
      div#call
        div#myStream
          div#roomTitle
          video#myFace(autoplay,playsinline, width="400", height="400")
          span#myNickname
          button#mute Mute
          button#camera Turn Camera Off
          select#cameras
          video#peerFace(autoplay,playsinline, width="400", height="400")
          span#peerNickname          
        div#myMessage
          div#messageList
            ul 
          div#messageInput
            form
              input(type="text" required placeholder="Leave a Message")
              button Send

    script(src="/socket.io/socket.io.js")
    script(src="/public/js/app.js")